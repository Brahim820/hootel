<?xml version="1.0"?>
<openerp>
    <data>

        <record id="hotel_reservation_action_checkin" model="ir.actions.act_window">
               <field name="name">Checkins</field>
               <field name="res_model">hotel.folio</field>
               <field name="view_mode">tree,form</field>
               <field name="domain">[('checkins_reservations','=',True)]</field>
               </field>
        </record>

        <record id="hotel_reservation_action_checkout" model="ir.actions.act_window">
               <field name="name">Checkout</field>
               <field name="res_model">hotel.folio</field>
               <field name="view_mode">tree,form</field>
               <field name="domain">[('checkouts_reservations','=',True)]</field>
               </field>
        </record>

        <record id="hotel_reservation_action_paydue" model="ir.actions.act_window">
               <field name="name">Pending Payments</field>
               <field name="res_model">hotel.folio</field>
               <field name="view_mode">tree,form</field>
               <field name="domain">[('invoices_amount','>',0),('checkin','&lt;=',datetime.datetime.now().replace(hour=23, minute=59, second=59)]</field>
        </record>

    </data>
 </openerp>
