<?xml version="1.0"?>
<odoo>

    <record id="hotel_folio_view_form" model="ir.ui.view">
        <field name="model">hotel.folio</field>
        <field name="inherit_id" ref="hotel.view_hotel_folio1_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_internal_comment']" position="before">
                    <field name="whas_wubook_reservations" invisible="True" />
                    <field name="wcustomer_notes" readonly="True" attrs="{'invisible':[('whas_wubook_reservations', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_hotel_reservation_form" model="ir.ui.view">
        <field name="model">view.hotel.reservation.form</field>
        <field name="inherit_id" ref="hotel.view_hotel_reservation_form" />
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='room_lines']/tree/field[@name='price_subtotal']" position="before">
                    <field name="wchannel_id" />
            </xpath>
        </field>
    </record>

</odoo>
